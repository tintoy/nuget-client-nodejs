{
    "compilerOptions": {
        "module": "commonjs",
        "target": "es6",
        "noImplicitAny": false,
        "outDir": "lib",
        "rootDir": ".",
        "inlineSourceMap": true,
        "declaration": true,
        "lib": [ "es6", "dom" ]
    },
    "include": [
        "src/**/*.ts",
        "test/**/*.ts"
    ],
    "exclude": [
        "node_modules",
        ".vscode-test"
    ],
    "compileOnSave": true
}
